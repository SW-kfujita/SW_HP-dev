            img(src="../img/company/questionare03.png", alt="スカイウイルに入社して、成長できたと感じますか？")
          .item.animated
            img(src="../img/company/questionare04.png", alt="仕事に対する手ごたえや達成感を感じていますか？")
          .item.animated
            img(src="../img/company/questionare05.png", alt="自分の能力や専門性を高められていると感じますか？")
          .item.animated
